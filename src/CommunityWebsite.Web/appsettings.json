{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=CommunityWebsite.db"
    },
    "Jwt": {
        "SecretKey": "CHANGE-THIS-TO-A-SECURE-SECRET-KEY-AT-LEAST-32-CHARACTERS-LONG-IN-PRODUCTION"
    },
    "Cors": {
        "Development": [
            "http://localhost:3000",
            "http://localhost:5001",
            "http://localhost:5173",
            "https://localhost:7001"
        ],
        "Production": [
            "https://yourdomain.com"
        ]
    },
    "IpRateLimiting": {
        "EnableEndpointRateLimiting": true,
        "StackBlockedRequests": false,
        "RealIpHeader": "X-Real-IP",
        "ClientIdHeader": "X-ClientId",
        "HttpStatusCode": 429,
        "IpWhitelist": [],
        "EndpointWhitelist": [
            "/swagger"
        ],
        "IpBlacklist": [],
        "GeneralRules": [
            {
                "Endpoint": "*",
                "Period": "1m",
                "Limit": 100,
                "QuotaExceededResponse": {
                    "Message": "API rate limit exceeded. Maximum 100 requests per minute."
                }
            },
            {
                "Endpoint": "*/auth/login",
                "Period": "15m",
                "Limit": 5,
                "QuotaExceededResponse": {
                    "Message": "Too many login attempts. Please try again after 15 minutes."
                }
            },
            {
                "Endpoint": "*/auth/register",
                "Period": "1h",
                "Limit": 3,
                "QuotaExceededResponse": {
                    "Message": "Too many registration attempts. Please try again later."
                }
            }
        ]
    }
}