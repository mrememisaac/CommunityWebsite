@model EventDto
@{
    ViewData["Title"] = Model?.Title ?? "Event Details";
    var isPast = Model?.Date < DateTime.UtcNow;
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Events" asp-action="Index">Events</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model?.Title</li>
        </ol>
    </nav>

    @if (Model != null)
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    @if (isPast)
                    {
                        <div class="card-header bg-secondary text-white">
                            <i class="bi bi-clock-history me-2"></i>This event has already taken place
                        </div>
                    }
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h1 class="card-title mb-0">@Model.Title</h1>
                            @if (!isPast)
                            {
                                <span class="badge bg-success fs-6">Upcoming</span>
                            }
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <div class="d-flex align-items-center text-muted">
                                    <i class="bi bi-calendar-event fs-4 me-3 text-primary"></i>
                                    <div>
                                        <strong>@Model.Date.ToString("dddd, MMMM dd, yyyy")</strong>
                                        <br>
                                        <span>@Model.Date.ToString("h:mm tt")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-center text-muted">
                                    <i class="bi bi-geo-alt fs-4 me-3 text-primary"></i>
                                    <div>
                                        <strong>Location</strong>
                                        <br>
                                        <span>@(Model.Location ?? "To be announced")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <div class="event-description mb-4">
                            <h5>About This Event</h5>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p>@Html.Raw(Model.Description.Replace("\n", "<br>"))</p>
                            }
                            else
                            {
                                <p class="text-muted">No description provided.</p>
                            }
                        </div>

                        <div class="d-flex justify-content-between align-items-center border-top pt-3">
                            <div class="d-flex align-items-center">
                                <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                    @(Model.OrganizerUsername?.Substring(0, 1).ToUpper() ?? "?")
                                </div>
                                <div>
                                    <small class="text-muted">Organized by</small>
                                    <br>
                                    <strong>@Model.OrganizerUsername</strong>
                                </div>
                            </div>
                            <div id="eventActions">
                                <!-- Actions will be populated by JavaScript if user is organizer -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Event Summary Card -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white text-center">
                        <div class="display-4">@Model.Date.Day</div>
                        <div class="fs-5">@Model.Date.ToString("MMMM yyyy")</div>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled mb-0">
                            <li class="mb-3">
                                <i class="bi bi-clock me-2 text-primary"></i>
                                <strong>Time:</strong> @Model.Date.ToString("h:mm tt")
                            </li>
                            <li class="mb-3">
                                <i class="bi bi-geo-alt me-2 text-primary"></i>
                                <strong>Location:</strong> @(Model.Location ?? "TBD")
                            </li>
                            <li>
                                <i class="bi bi-person me-2 text-primary"></i>
                                <strong>Organizer:</strong> @Model.OrganizerUsername
                            </li>
                        </ul>
                    </div>
                    @if (!isPast)
                    {
                        <div class="card-footer bg-transparent">
                            <button class="btn btn-primary w-100" id="addToCalendarBtn">
                                <i class="bi bi-calendar-plus me-2"></i>Add to Calendar
                            </button>
                        </div>
                    }
                </div>

                <!-- Share Card -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Share This Event</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-secondary btn-sm" onclick="copyEventLink()">
                                <i class="bi bi-link-45deg me-2"></i>Copy Link
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-exclamation-circle display-1 text-warning"></i>
            <h3 class="mt-3">Event Not Found</h3>
            <p class="text-muted">The event you're looking for doesn't exist or has been removed.</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left me-2"></i>Back to Events
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        const eventId = @(Model?.Id ?? 0);
        const eventOrganizerId = @(Model?.OrganizerId ?? 0);
        const eventTitle = '@Html.Raw(Model?.Title?.Replace("'", "\\'") ?? "")';
        const eventDate = '@(Model?.Date.ToString("yyyy-MM-ddTHH:mm:ss") ?? "")';
        const eventLocation = '@Html.Raw(Model?.Location?.Replace("'", "\\'") ?? "")';

        $(document).ready(function() {
            // Show edit/delete buttons if user is the organizer
            const currentUserId = localStorage.getItem('userId');
            if (currentUserId && parseInt(currentUserId) === eventOrganizerId) {
                $('#eventActions').html(`
                    <a href="/Events/Edit/${eventId}" class="btn btn-outline-primary btn-sm me-2">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <button class="btn btn-outline-danger btn-sm" onclick="deleteEvent()">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                `);
            }

            // Add to Calendar
            $('#addToCalendarBtn').click(function() {
                const start = new Date(eventDate);
                const end = new Date(start.getTime() + 2 * 60 * 60 * 1000); // 2 hours later
                
                const icsContent = [
                    'BEGIN:VCALENDAR',
                    'VERSION:2.0',
                    'BEGIN:VEVENT',
                    `DTSTART:${formatDateForICS(start)}`,
                    `DTEND:${formatDateForICS(end)}`,
                    `SUMMARY:${eventTitle}`,
                    `LOCATION:${eventLocation}`,
                    `URL:${window.location.href}`,
                    'END:VEVENT',
                    'END:VCALENDAR'
                ].join('\r\n');

                const blob = new Blob([icsContent], { type: 'text/calendar' });
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = `${eventTitle.replace(/[^a-z0-9]/gi, '_')}.ics`;
                link.click();
                
                showToast('Calendar file downloaded!', 'success');
            });
        });

        function formatDateForICS(date) {
            return date.toISOString().replace(/[-:]/g, '').split('.')[0] + 'Z';
        }

        function deleteEvent() {
            if (!confirm('Are you sure you want to delete this event? This action cannot be undone.')) {
                return;
            }

            apiRequest(`/api/events/${eventId}`, 'DELETE')
                .then(function(result) {
                    if (result.isSuccess) {
                        showToast('Event deleted successfully', 'success');
                        window.location.href = '/Events';
                    } else {
                        showToast(result.errors?.join(', ') || 'Failed to delete event', 'danger');
                    }
                });
        }

        function copyEventLink() {
            navigator.clipboard.writeText(window.location.href).then(function() {
                showToast('Link copied to clipboard!', 'success');
            });
        }
    </script>
}
