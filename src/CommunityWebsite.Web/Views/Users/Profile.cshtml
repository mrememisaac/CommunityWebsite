@{
    ViewData["Title"] = "User Profile";
    var userProfile = (dynamic)ViewBag.UserProfile;
    var recentPosts = (List<dynamic>)ViewBag.RecentPosts ?? new List<dynamic>();
    var currentUserId = (int?)ViewBag.CurrentUserId;
    var isOwnProfile = currentUserId == userProfile.Id;
}

<div class="container py-4">
    <!-- Profile Header -->
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-4 mb-4">
                        <!-- Profile Image -->
                        <div>
                            @if (!string.IsNullOrEmpty(userProfile.ProfileImageUrl))
                            {
                                <img src="@userProfile.ProfileImageUrl" alt="@userProfile.Username" class="rounded-circle"
                                    style="width: 120px; height: 120px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center"
                                    style="width: 120px; height: 120px;">
                                    <i class="bi bi-person text-white" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>

                        <!-- Profile Info -->
                        <div class="flex-grow-1">
                            <div class="d-flex align-items-center gap-3 mb-2">
                                <h1 class="h2 mb-0">@userProfile.Username</h1>
                                @if (isOwnProfile)
                                {
                                    <a href="@Url.Action("Edit", "Account")" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil me-1"></i>Edit Profile
                                    </a>
                                }
                            </div>

                            <p class="text-muted mb-3">
                                <i class="bi bi-calendar3 me-2"></i>
                                Member since @userProfile.CreatedAt.ToString("MMMM dd, yyyy")
                            </p>

                            @if (!string.IsNullOrEmpty(userProfile.Bio))
                            {
                                <p class="mb-0">@userProfile.Bio</p>
                            }
                        </div>
                    </div>

                    <!-- Stats Row -->
                    <div class="row g-3 border-top pt-4">
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h4 text-primary mb-1">@userProfile.PostCount</div>
                                <div class="text-muted small">Post@(userProfile.PostCount != 1 ? "s" : "")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h4 text-success mb-1">@userProfile.Roles.Count</div>
                                <div class="text-muted small">Role@(userProfile.Roles.Count != 1 ? "s" : "")</div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="text-center">
                                <div class="h4 text-info mb-1">@userProfile.Email</div>
                                <div class="text-muted small">Email</div>
                            </div>
                        </div>
                    </div>

                    <!-- Roles -->
                    @if (userProfile.Roles.Count > 0)
                    {
                        <div class="border-top mt-4 pt-4">
                            <h6 class="mb-3">
                                <i class="bi bi-shield-check me-2"></i>Roles
                            </h6>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var role in userProfile.Roles)
                                {
                                    <span class="badge bg-info">@role</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Posts Section -->
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h2 class="h4 mb-0">
                    <i class="bi bi-file-text me-2"></i>Recent Posts
                </h2>
                @if (isOwnProfile)
                {
                    <a href="@Url.Action("MyPosts", "Posts")" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                }
            </div>

            @if (recentPosts.Count > 0)
            {
                <div class="list-group">
                    @foreach (var post in recentPosts)
                    {
                        <a href="@Url.Action("Details", "Posts", new { id = post.Id })"
                            class="list-group-item list-group-item-action border-0 shadow-sm mb-3 p-4 rounded-2 transition-link">
                            <div class="d-flex w-100 justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <h5 class="mb-2">@post.Title</h5>
                                    <p class="text-muted small mb-2">@post.Preview</p>
                                    <div class="d-flex gap-3 text-muted small">
                                        <span><i class="bi bi-calendar3 me-1"></i>@post.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        <span><i class="bi bi-eye me-1"></i>@post.ViewCount Views</span>
                                        <span><i class="bi bi-chat me-1"></i>@post.CommentCount Comment@(post.CommentCount != 1 ? "s" : "")</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle me-2"></i>
                    <div>
                        @if (isOwnProfile)
                        {
                            <text>You haven't published any posts yet. <a href="@Url.Action("Create", "Posts")">Create your
                                    first post</a></text>
                        }
                        else
                        {
                            <text>This user hasn't published any posts yet.</text>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function isAuthenticated() {
            return @User.Identity.IsAuthenticated.ToString().ToLower();
        }
    </script>
}