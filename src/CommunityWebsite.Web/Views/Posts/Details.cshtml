@model PostDto
@{
    ViewData["Title"] = Model?.Title ?? "Post Details";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Posts" asp-action="Index">Posts</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model?.Title</li>
        </ol>
    </nav>

    @if (Model != null)
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <article class="card mb-4">
                    <div class="card-body">
                        <h1 class="card-title mb-3">@Model.Title</h1>
                        
                        <div class="d-flex align-items-center mb-4">
                            <a href="@Url.Action("Profile", "Users", new { id = Model.AuthorId })" class="text-decoration-none">
                                <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px; font-size: 1.25rem;">
                                    @(Model.AuthorUsername?.Substring(0, 1).ToUpper() ?? "?")
                                </div>
                            </a>
                            <div>
                                <a href="@Url.Action("Profile", "Users", new { id = Model.AuthorId })" class="text-decoration-none text-dark">
                                    <strong>@Model.AuthorUsername</strong>
                                </a>
                                <br>
                                <small class="text-muted">
                                    Posted on @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                    @if (Model.UpdatedAt.HasValue && Model.UpdatedAt.Value != Model.CreatedAt)
                                    {
                                        <span class="ms-2">(edited @Model.UpdatedAt.Value.ToString("MMM dd, yyyy"))</span>
                                    }
                                </small>
                            </div>
                        </div>

                        <div class="post-content mb-4">
                            @Html.Raw(Model.Content.Replace("\n", "<br>"))
                        </div>

                        <div class="d-flex justify-content-between align-items-center border-top pt-3">
                            <div>
                                <span class="badge bg-secondary">
                                    <i class="bi bi-chat me-1"></i>@Model.CommentCount comments
                                </span>
                            </div>
                            <div id="postActions">
                                <!-- Actions will be populated by JavaScript if user is author -->
                            </div>
                        </div>
                    </div>
                </article>

                <!-- Comments Section -->
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="bi bi-chat-dots me-2"></i>Comments (@Model.CommentCount)
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Add Comment Form -->
                        <div id="addCommentSection" class="mb-4">
                            <form id="commentForm">
                                <div class="mb-3">
                                    <textarea class="form-control" id="commentContent" rows="3" placeholder="Share your thoughts..." required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-send me-2"></i>Post Comment
                                </button>
                            </form>
                        </div>

                        <!-- Comments List -->
                        <div id="commentsList">
                            @if (ViewBag.Comments != null && ((IEnumerable<CommentDto>)ViewBag.Comments).Any())
                            {
                                foreach (var comment in (IEnumerable<CommentDto>)ViewBag.Comments)
                                {
                                    <div class="comment mb-3 p-3 bg-light rounded" data-comment-id="@comment.Id">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="d-flex align-items-center">
                                                <a href="@Url.Action("Profile", "Users", new { id = comment.AuthorId })" class="text-decoration-none">
                                                    <div class="author-avatar-sm bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        @(comment.AuthorUsername?.Substring(0, 1).ToUpper() ?? "?")
                                                    </div>
                                                </a>
                                                <div>
                                                    <a href="@Url.Action("Profile", "Users", new { id = comment.AuthorId })" class="text-decoration-none text-dark">
                                                        <strong>@comment.AuthorUsername</strong>
                                                    </a>
                                                    <br>
                                                    <small class="text-muted">@comment.CreatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                                                </div>
                                            </div>
                                            <div class="comment-actions">
                                                <!-- Actions populated by JS for comment author -->
                                            </div>
                                        </div>
                                        <p class="mb-0">@comment.Content</p>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-4" id="noCommentsMessage">
                                    <i class="bi bi-chat display-4"></i>
                                    <p class="mt-2">No comments yet. Be the first to comment!</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h6 class="mb-0">About the Author</h6>
                    </div>
                    <div class="card-body text-center">
                        <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem;">
                            @(Model.AuthorUsername?.Substring(0, 1).ToUpper() ?? "?")
                        </div>
                        <h5>@Model.AuthorUsername</h5>
                        <a href="/Users/@Model.AuthorId" class="btn btn-outline-primary btn-sm">View Profile</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Share This Post</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button class="btn btn-outline-secondary btn-sm" onclick="copyPostLink()">
                                <i class="bi bi-link-45deg me-2"></i>Copy Link
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-exclamation-circle display-1 text-warning"></i>
            <h3 class="mt-3">Post Not Found</h3>
            <p class="text-muted">The post you're looking for doesn't exist or has been removed.</p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="bi bi-arrow-left me-2"></i>Back to Posts
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        const isAuthenticated = isLoggedIn();

        const postId = @(Model?.Id ?? 0);
        const postAuthorId = @(Model?.AuthorId ?? 0);

        $(document).ready(function() {
            // Check authentication for comment form
            if (!isAuthenticated) {
                $('#addCommentSection').html(`
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <a href="/Account/Login?returnUrl=${encodeURIComponent(window.location.pathname)}">Log in</a> to post a comment.
                    </div>
                `);
            }

            // Show edit/delete buttons if user is the author
            const currentUserId = getCurrentUser().userId;
            if (currentUserId && parseInt(currentUserId) === postAuthorId) {
                $('#postActions').html(`
                    <a href="/Posts/Edit/${postId}" class="btn btn-outline-primary btn-sm me-2">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <button class="btn btn-outline-danger btn-sm" onclick="deletePost()">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                `);
            }

            // Comment form submission
            $('#commentForm').submit(function(e) {
                e.preventDefault();
                const content = $('#commentContent').val().trim();
                if (!content) return;
                console.log({content, authorId: currentUserId, parentCommentId: 0});
                apiPost(`/posts/${postId}/comments`, {
                    content: content,
                    authorId: currentUserId,
                }).then(function(result, textStatus, jqXHR) {
                    if (jqXHR.status === 201 && result) {
                        showToast('Comment posted successfully!', 'success');
                        location.reload();
                    } else {
                        showToast(result.errors?.join(', ') || 'Failed to post comment', 'danger');
                    }
                }).catch(function() {
                    showToast('Failed to post comment', 'danger');
                });
            });
        });

        function deletePost() {
            if (!confirm('Are you sure you want to delete this post? This action cannot be undone.')) {
                return;
            }

            apiDelete(`/posts/${postId}`)
                .then(function(result, textStatus, jqXHR) {
                    if (jqXHR.status === 204) {
                        showToast('Post deleted successfully', 'success');
                        window.location.href = '/Posts';
                    } else {
                        showToast(result.errors?.join(', ') || 'Failed to delete post', 'danger');
                    }
                });
        }

        function copyPostLink() {
            navigator.clipboard.writeText(window.location.href).then(function() {
                showToast('Link copied to clipboard!', 'success');
            });
        }
    </script>
}
