@model IEnumerable<PostDto>
@{
    ViewData["Title"] = "Community Posts";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-1">Community Posts</h1>
            <p class="text-muted">Share ideas, ask questions, and connect with fellow industry captains</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary" id="createPostBtn">
                <i class="bi bi-plus-lg me-2"></i>Create Post
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" name="search" value="@ViewBag.Search"
                        placeholder="Search posts...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Sort By</label>
                    <select class="form-select" name="sortBy">
                        <option value="newest" selected="@(ViewBag.SortBy == "newest")">Newest First</option>
                        <option value="oldest" selected="@(ViewBag.SortBy == "oldest")">Oldest First</option>
                        <option value="popular" selected="@(ViewBag.SortBy == "popular")">Most Comments</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Author</label>
                    <select class="form-select" name="authorId">
                        <option value="">All Authors</option>
                        @if (ViewBag.Authors != null)
                        {
                            foreach (var author in ViewBag.Authors)
                            {
                                <option value="@author.Id">@author.Username</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Posts List -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-12 mb-4">
                    <div class="card post-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">
                                    <a asp-action="Details" asp-route-id="@post.Id"
                                        class="text-decoration-none text-dark stretched-link">
                                        @post.Title
                                    </a>
                                </h5>
                                <small class="text-muted">@post.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                            <p class="card-text text-muted mb-3">
                                @(post.Content.Length > 200 ? post.Content.Substring(0, 200) + "..." : post.Content)
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <a href="@Url.Action("Profile", "Users", new { id = post.AuthorId })"
                                        class="text-decoration-none">
                                        <div
                                            class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2">
                                            @(post.AuthorUsername?.Substring(0, 1).ToUpper() ?? "?")
                                        </div>
                                    </a>
                                    <a href="@Url.Action("Profile", "Users", new { id = post.AuthorId })"
                                        class="text-decoration-none text-muted">
                                        <span class="text-muted">@post.AuthorUsername</span>
                                    </a>
                                </div>
                                <div>
                                    <span class="badge bg-secondary me-2">
                                        <i class="bi bi-chat me-1"></i>@post.CommentCount comments
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Post navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-file-earmark-text display-1 text-muted"></i>
            <h3 class="mt-3">No posts yet</h3>
            <p class="text-muted">Be the first to share something with the community!</p>
            <a asp-action="Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-lg me-2"></i>Create First Post
            </a>
        </div>
    }
</div>