@model PostDto
@{
    ViewData["Title"] = "Edit Post";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Posts" asp-action="Index">Posts</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model?.Id">@Model?.Title</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>Edit Post
                    </h4>
                    <small class="text-muted">Last updated: @Model?.UpdatedAt?.ToString("MMM dd, yyyy") ?? @Model?.CreatedAt.ToString("MMM dd, yyyy")</small>
                </div>
                <div class="card-body">
                    @if (Model != null)
                    {
                        <form id="editPostForm">
                            <input type="hidden" id="postId" value="@Model.Id">
                            
                            <div class="mb-4">
                                <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                                <input type="text" 
                                       class="form-control form-control-lg" 
                                       id="title" 
                                       name="Title"
                                       value="@Model.Title"
                                       maxlength="200"
                                       required>
                                <div class="form-text">Choose a clear, descriptive title (max 200 characters)</div>
                            </div>

                            <div class="mb-4">
                                <label for="content" class="form-label">Content <span class="text-danger">*</span></label>
                                <textarea class="form-control" 
                                          id="content" 
                                          name="Content"
                                          rows="10" 
                                          minlength="10"
                                          required>@Model.Content</textarea>
                                <div class="form-text">Write at least 10 characters</div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Cancel
                                </a>
                                <div>
                                    <button type="button" class="btn btn-outline-danger me-2" id="deleteBtn">
                                        <i class="bi bi-trash me-2"></i>Delete Post
                                    </button>
                                    <button type="submit" class="btn btn-primary" id="submitBtn">
                                        <i class="bi bi-check-lg me-2"></i>Save Changes
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-exclamation-circle display-1 text-warning"></i>
                            <h3 class="mt-3">Post Not Found</h3>
                            <p class="text-muted">The post you're trying to edit doesn't exist.</p>
                            <a asp-action="Index" class="btn btn-primary">Back to Posts</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this post?</p>
                <p class="text-muted mb-0"><strong>This action cannot be undone.</strong> All comments on this post will also be deleted.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">
                    <i class="bi bi-trash me-2"></i>Delete Post
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            const postId = $('#postId').val();
            const deleteModal = new bootstrap.Modal('#deleteModal');

            // Check authentication and authorization
            if (!isAuthenticated()) {
                window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname);
                return;
            }

            // Form submission
            $('#editPostForm').submit(function(e) {
                e.preventDefault();
                
                const title = $('#title').val().trim();
                const content = $('#content').val().trim();

                if (!title || title.length < 1) {
                    showToast('Please provide a title', 'warning');
                    $('#title').focus();
                    return;
                }

                if (!content || content.length < 10) {
                    showToast('Content must be at least 10 characters', 'warning');
                    $('#content').focus();
                    return;
                }

                $('#submitBtn').prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Saving...');

                apiRequest(`/api/posts/${postId}`, 'PUT', {
                    title: title,
                    content: content
                }).then(function(result) {
                    if (result.isSuccess) {
                        showToast('Post updated successfully!', 'success');
                        window.location.href = '/Posts/Details/' + postId;
                    } else {
                        showToast(result.errors?.join(', ') || 'Failed to update post', 'danger');
                        $('#submitBtn').prop('disabled', false).html('<i class="bi bi-check-lg me-2"></i>Save Changes');
                    }
                }).catch(function() {
                    showToast('Failed to update post. Please try again.', 'danger');
                    $('#submitBtn').prop('disabled', false).html('<i class="bi bi-check-lg me-2"></i>Save Changes');
                });
            });

            // Delete button
            $('#deleteBtn').click(function() {
                deleteModal.show();
            });

            // Confirm delete
            $('#confirmDelete').click(function() {
                $(this).prop('disabled', true).html('<span class="spinner-border spinner-border-sm me-2"></span>Deleting...');

                apiRequest(`/api/posts/${postId}`, 'DELETE')
                    .then(function(result) {
                        if (result.isSuccess) {
                            showToast('Post deleted successfully', 'success');
                            window.location.href = '/Posts';
                        } else {
                            showToast(result.errors?.join(', ') || 'Failed to delete post', 'danger');
                            deleteModal.hide();
                            $('#confirmDelete').prop('disabled', false).html('<i class="bi bi-trash me-2"></i>Delete Post');
                        }
                    });
            });
        });
    </script>
}
