@{
    ViewData["Title"] = "Welcome";
    var recentPosts = ViewBag.RecentPosts as IEnumerable<PostSummaryDto> ?? Enumerable.Empty<PostSummaryDto>();
    var upcomingEvents = ViewBag.UpcomingEvents as IEnumerable<EventDto> ?? Enumerable.Empty<EventDto>();
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h1 class="display-5 fw-bold mb-3">Welcome to Community Hub</h1>
                <p class="lead mb-4">
                    Join our thriving community of gamers. Share your experiences, 
                    discuss strategies, and connect with fellow players.
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-controller="Posts" asp-action="Index" class="btn btn-light btn-lg">
                        <i class="bi bi-chat-square-text me-2"></i>Browse Posts
                    </a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-light btn-lg auth-logged-out">
                        <i class="bi bi-person-plus me-2"></i>Join Now
                    </a>
                </div>
            </div>
            <div class="col-lg-5 d-none d-lg-block text-center">
                <i class="bi bi-people-fill" style="font-size: 12rem; opacity: 0.2;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="row g-4">
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number" id="postCount">--</div>
                    <div class="stat-label">Posts</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number" id="memberCount">--</div>
                    <div class="stat-label">Members</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number" id="eventCount">--</div>
                    <div class="stat-label">Events</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number" id="commentCount">--</div>
                    <div class="stat-label">Comments</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Posts Section -->
<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">
                <i class="bi bi-chat-square-text text-primary me-2"></i>Recent Posts
            </h2>
            <a asp-controller="Posts" asp-action="Index" class="btn btn-outline-primary">
                View All <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>

        @if (recentPosts.Any())
        {
            <div class="row g-4">
                @foreach (var post in recentPosts)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card post-card card-hover h-100">
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(post.Category))
                                {
                                    <span class="badge bg-primary badge-category mb-2">@post.Category</span>
                                }
                                <h5 class="card-title">
                                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id" 
                                       class="text-decoration-none text-dark stretched-link">
                                        @post.Title
                                    </a>
                                </h5>
                                <p class="card-text text-truncate-3">@post.Preview</p>
                            </div>
                            <div class="card-footer bg-transparent border-0 pt-0">
                                <div class="d-flex justify-content-between align-items-center post-meta">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-placeholder avatar-placeholder-sm me-2">
                                            @(post.Author?.Username?.Substring(0, 1).ToUpper() ?? "?")
                                        </div>
                                        <span>@(post.Author?.Username ?? "Unknown")</span>
                                    </div>
                                    <div>
                                        <i class="bi bi-eye me-1"></i>@post.ViewCount
                                        <i class="bi bi-chat ms-2 me-1"></i>@post.CommentCount
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <h5>No posts yet</h5>
                <p class="text-muted">Be the first to create a post!</p>
                <a asp-controller="Posts" asp-action="Create" class="btn btn-primary auth-logged-in d-none">
                    <i class="bi bi-plus-lg me-1"></i>Create Post
                </a>
            </div>
        }
    </div>
</section>

<!-- Upcoming Events Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">
                <i class="bi bi-calendar-event text-primary me-2"></i>Upcoming Events
            </h2>
            <a asp-controller="Events" asp-action="Index" class="btn btn-outline-primary">
                View All <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>

        @if (upcomingEvents.Any())
        {
            <div class="row g-4">
                @foreach (var evt in upcomingEvents)
                {
                    <div class="col-md-6">
                        <div class="card event-card h-100">
                            <div class="card-body">
                                <div class="d-flex">
                                    <div class="event-date-badge me-3 flex-shrink-0">
                                        <div class="day">@evt.Date.Day</div>
                                        <div class="month">@evt.Date.ToString("MMM")</div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="card-title mb-1">
                                            <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.Id"
                                               class="text-decoration-none text-dark">
                                                @evt.Title
                                            </a>
                                        </h5>
                                        <p class="text-muted small mb-2">
                                            <i class="bi bi-clock me-1"></i>
                                            @evt.Date.ToString("h:mm tt")
                                            @if (!string.IsNullOrEmpty(evt.Location))
                                            {
                                                <span class="ms-2">
                                                    <i class="bi bi-geo-alt me-1"></i>@evt.Location
                                                </span>
                                            }
                                        </p>
                                        @if (!string.IsNullOrEmpty(evt.Description))
                                        {
                                            <p class="card-text text-truncate-2 small">@evt.Description</p>
                                        }
                                        <div class="mt-2">
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-people me-1"></i>@evt.AttendeeCount attending
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-calendar-x"></i>
                <h5>No upcoming events</h5>
                <p class="text-muted">Check back later for community events!</p>
            </div>
        }
    </div>
</section>

<!-- Call to Action Section -->
<section class="py-5">
    <div class="container">
        <div class="card bg-primary text-white">
            <div class="card-body p-5 text-center">
                <h3 class="mb-3">Ready to Join the Community?</h3>
                <p class="mb-4">
                    Create an account to post, comment, and participate in events.
                </p>
                <div class="auth-logged-out">
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-light btn-lg me-2">
                        <i class="bi bi-person-plus me-2"></i>Create Account
                    </a>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light btn-lg">
                        Already a member? Login
                    </a>
                </div>
                <div class="auth-logged-in d-none">
                    <a asp-controller="Posts" asp-action="Create" class="btn btn-light btn-lg">
                        <i class="bi bi-plus-lg me-2"></i>Create Your First Post
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load stats via API (optional - could be server-rendered)
            // For demo, using placeholder values
            $('#postCount').text('@recentPosts.Count()');
            $('#eventCount').text('@upcomingEvents.Count()');
            $('#memberCount').text('--');
            $('#commentCount').text('--');
        });
    </script>
}
